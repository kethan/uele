{
	"name": "uele",
	"description": "uele reactive frontend library",
	"version": "0.2.0",
	"source": "./src/index.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./src/index.d.ts",
			"browser": "./dist/index.min.js",
			"require": "./dist/index.cjs",
			"import": "./dist/index.modern.js",
			"default": "./dist/index.modern.js"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.module.js",
	"unpkg": "./dist/index.min.js",
	"scripts": {
		"build": "npm run build:min && npm run build:formats",
		"dev": "vite",
		"build:formats": "microbundle build src/index.ts --sourcemap false -f modern,esm,cjs --jsx h --jsxFragment",
		"build:min": "microbundle build --no-pkg-main --raw --sourcemap false --external none -f modern src/index.cjs -o dist/index.min.js"
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"microbundle": "^0.15.0",
		"typescript": "^4.6.4",
		"vite": "^3.0.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kethan/uele.git"
	},
	"keywords": [
		"observable",
		"createeffect",
		"useeffect",
		"state",
		"computed",
		"ref",
		"atom",
		"computeds",
		"memo",
		"derivation",
		"behavior",
		"effect",
		"signal",
		"watch",
		"live",
		"reactive",
		"react",
		"preact"
	],
	"author": "Kethan Surana",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/kethan/uele/issues"
	},
	"homepage": "https://github.com/kethan/uele#readme",
	"types": "./dist/index.d.ts",
	"dependencies": {
		"ulive": "^0.3.1"
	}
}
